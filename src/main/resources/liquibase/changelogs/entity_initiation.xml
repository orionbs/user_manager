<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.4.xsd">

    <!-- User Schema -->
    <changeSet id="user-init-schema" author="orionbs">

        <createTable tableName="user">
            <column name="uuid" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="first_name" type="varchar(255)"/>
            <column name="last_name" type="varchar(255)"/>
        </createTable>

        <addUniqueConstraint tableName="user" columnNames="email" constraintName="UNIQUE_CONSTRAINT_USER_EMAIL"/>

        <addPrimaryKey tableName="user" columnNames="uuid" constraintName="PRIMARY_KEY_USER_UUID"/>

    </changeSet>

    <!-- Event Type Schema -->
    <changeSet id="event-type-init-schema" author="orionbs">

        <createTable tableName="event_type">
            <column name="id" type="integer" autoIncrement="true">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PRIMARY_KEY_EVENT_TYPE_ID"/>
            </column>
            <column name="value" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addUniqueConstraint tableName="event_type" columnNames="value" constraintName="UNIQUE_CONSTRAINT_EVENT_TYPE_VALUE"/>

    </changeSet>

    <!-- Status Type Schema -->
    <changeSet id="status-type-init-schema" author="orionbs">

        <createTable tableName="status_type">
            <column name="id" type="integer" autoIncrement="true">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PRIMARY_KEY_STATUS_TYPE_ID"/>
            </column>
            <column name="value" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addUniqueConstraint tableName="status_type" columnNames="value" constraintName="UNIQUE_CONSTRAINT_STATUS_TYPE_VALUE"/>

    </changeSet>

    <!-- Event Schema -->
    <changeSet id="event-init-schema" author="orionbs">

        <createTable tableName="event">
            <column name="uuid" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="milestone" type="datetime">
                <constraints nullable="false"/>
            </column>
            <column name="ip" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="result" type="boolean">
                <constraints nullable="false"/>
            </column>
            <column name="event_type_id" type="integer">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="uuid">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey tableName="event" columnNames="uuid" constraintName="PRIMARY_KEY_EVENT_UUID"/>

        <addForeignKeyConstraint baseColumnNames="event_type_id" baseTableName="event"
                                 constraintName="FOREIGN_KEY_EVENT_ON_EVENT_TYPE"
                                 referencedColumnNames="id" referencedTableName="event_type"/>

        <addForeignKeyConstraint baseColumnNames="user_id" baseTableName="event"
                                 constraintName="FOREIGN_KEY_EVENT_ON_USER"
                                 referencedColumnNames="uuid" referencedTableName="user"/>

    </changeSet>

    <!-- Status Schema -->
    <changeSet id="status-init-schema" author="orionbs">

        <createTable tableName="status">
            <column name="uuid" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="milestone" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="status_type_id" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="UUID">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey tableName="status" columnNames="uuid" constraintName="PRIMARY_KEY_STATUS_UUID"/>

        <addForeignKeyConstraint baseColumnNames="status_type_id" baseTableName="status"
                                 constraintName="FOREIGN_KEY_STATUS_ON_STATUS_TYPE"
                                 referencedColumnNames="id" referencedTableName="status_type"/>

        <addForeignKeyConstraint baseColumnNames="user_id" baseTableName="status"
                                 constraintName="FOREIGN_KEY_STATUS_ON_USER"
                                 referencedColumnNames="uuid" referencedTableName="user"/>

    </changeSet>

    <!-- Password Schema -->
    <changeSet id="password-init-schema" author="orionbs">

        <createTable tableName="password">
            <column name="uuid" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="milestone" type="datetime">
                <constraints nullable="false"/>
            </column>
            <column name="value" type="varbinary(255)">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="uuid">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey tableName="password" columnNames="uuid" constraintName="PRIMARY_KEY_PASSWORD_UUID"/>

        <addForeignKeyConstraint baseColumnNames="user_id" baseTableName="password"
                                 constraintName="FOREIGN_KEY_PASSWORD_ON_USER"
                                 referencedColumnNames="uuid" referencedTableName="user"/>

    </changeSet>


</databaseChangeLog>
